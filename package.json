{
  "name": "ai-crash-course",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "lab": "npm --workspace=@repo/labs run lab",
    "api:dev": "npm --workspace=@repo/api run start:dev",
    "api:debug": "npm --workspace=@repo/api run start:debug",
    "api:build": "npm --workspace=@repo/api run build",
    "api:start": "npm --workspace=@repo/api run start",
    "chat:dev": "npm --workspace=@repo/chat-widget run dev",
    "chat:build": "npm --workspace=@repo/chat-widget run build",
    "chat:preview": "npm --workspace=@repo/chat-widget run preview",
    "db:up": "docker compose up -d postgres mongo && npm --workspace=@repo/api run migrate",
    "db:down": "docker compose down",
    "dev:widget": "sh -c 'npm run api:debug & npm run chat:dev'"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.5.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
